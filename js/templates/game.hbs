<div class="row">
  <div class="col-md-4"><h1>{{homeTeam}}</h1></div>
  <div class="col-md-4">vs</div>
  <div class="col-md-4"><h1>{{awayTeam}}</h1></div>
</div>

{{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="homeTeam">Home Team Name</label>
      {{input value=homeTeam id="homeTeam" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="awayTeam">Away Team Name</label>
      {{input value=awayTeam id="awayTeam" class="form-control"}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Save</button>
  </form>
{{else}}

  <button class="btn btn-primary" {{action 'edit'}}>Edit</button>
  <button class='btn btn-danger' {{action 'delete'}}>Delete</button>

{{/if}}

{{#link-to 'new-player' classNames="btn btn-primary"}}New Player{{/link-to}}

{{outlet}}

{{#each players}}
  <p>
    {{position}} | {{number}} | {{name}}
  </p>
{{/each}}
